{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/authentication": ["libs/users/authentication/src/index.ts"],
      "@project/blog-comment": ["libs/blog/blog-comment/src/index.ts"],
      "@project/blog-models": ["libs/blog/models/src/index.ts"],
      "@project/blog-post": ["libs/blog/blog-post/src/index.ts"],
      "@project/blog-user": ["libs/users/blog-user/src/index.ts"],
      "@project/core": ["libs/shared/core/src/index.ts"],
      "@project/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/email-subscriber": [
        "libs/notify/email-subscriber/src/index.ts"
      ],
      "@project/file-config": ["libs/file-vault/config/src/index.ts"],
      "@project/file-uploader": ["libs/file-vault/file-uploader/src/index.ts"],
      "@project/helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/interceptors": ["libs/shared/interceptors/src/index.ts"],
      "@project/notify-config": ["libs/notify/notify-config/src/index.ts"],
      "@project/notify-user": ["libs/users/notify-user/src/index.ts"],
      "@project/user-config": ["libs/users/user-config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
